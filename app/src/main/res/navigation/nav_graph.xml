<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.myfirstapp.presentation.MainFragment"
        android:label="home"
        >

        <action
            android:id="@+id/action_mainFragment_to_CourseFragment"
            app:destination="@id/course_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/course_fragment"
        android:name="com.example.myfirstapp.presentation.CourseFragment"
        android:label="course"
        tools:layout="@layout/fragment_course">

        <action
            android:id="@+id/action_courseFragment_to_chartFragment"
            app:destination="@id/chart_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/chart_fragment"
        android:name="com.example.myfirstapp.presentation.ChartFragment"
        android:label="chart"
        tools:layout="@layout/fragment_chart">
    </fragment>



</navigation>